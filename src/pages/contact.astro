    font-size: 1.05rem;
    color: #0b2b4c;
  }

  .cta-btn {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.8rem 1.6rem;
    background: #0b2b4c;
    color: #ffffff;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
  }

  .map iframe {
    width: 100%;
    height: 350px;
    border: none;
    border-radius: 16px;
  }

  @media (max-width: 768px) {
    .contact-container {
      grid-template-columns: 1fr;
    }
  }
</style>
