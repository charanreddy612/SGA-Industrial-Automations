<style>
  .page-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-size: 2.4rem;
    margin-bottom: 0.35rem;
    letter-spacing: 0.04em;
  }

  .page-header p {
    margin: 0;
    color: #9ca3af;
  }

  /* Robotic background shell */
  .contact-shell {
    position: relative;
    padding: 1.5rem 0 2.5rem;
    border-radius: 24px;
    background: radial-gradient(circle at top left, #1f2937, #020617 55%);
    overflow: hidden;
  }

  .contact-shell::before,
  .contact-shell::after {
    content: "";
    position: absolute;
    border-radius: 999px;
    filter: blur(40px);
    opacity: 0.35;
    pointer-events: none;
  }

  .contact-shell::before {
    width: 220px;
    height: 220px;
    background: #22d3ee;
    top: -60px;
    right: 5%;
  }

  .contact-shell::after {
    width: 260px;
    height: 260px;
    background: #4f46e5;
    bottom: -80px;
    left: -40px;
  }

  .contact-grid {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: minmax(0, 1.05fr) minmax(0, 1.45fr);
    gap: 2rem;
    align-items: flex-start;
  }

  .contact-card {
    background: rgba(15, 23, 42, 0.88);
    border-radius: 20px;
    padding: 1.9rem;
    box-shadow: 0 18px 45px rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(148, 163, 184, 0.25);
    backdrop-filter: blur(12px);
    color: #e5e7eb;
  }

  .contact-card h2 {
    margin-top: 0;
    margin-bottom: 0.4rem;
    font-size: 1.4rem;
  }

  .subtitle {
    margin-top: 0;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    color: #9ca3af;
  }

  .info-block {
    margin-bottom: 1.1rem;
  }

  .info-label {
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.12em;
    color: #9ca3af;
    display: inline-block;
    margin-bottom: 0.3rem;
  }

  .phone a {
    text-decoration: none;
    color: #22d3ee;
    font-weight: 600;
  }

  .phone a:hover {
    text-decoration: underline;
  }

  .call-note {
    margin-top: 0.8rem;
    margin-bottom: 0.5rem;
    color: #e5e7eb;
  }

  .button-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.7rem 1.5rem;
    border-radius: 999px;
    font-size: 0.95rem;
    font-weight: 600;
    border: 1px solid transparent;
    cursor: pointer;
    text-decoration: none;
    transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.15s, border-color 0.15s, color 0.15s;
    white-space: nowrap;
  }

  .btn-primary {
    background: radial-gradient(circle at top left, #22d3ee, #0ea5e9 40%, #4f46e5 100%);
    color: #0b1020;
    box-shadow: 0 0 20px rgba(34, 211, 238, 0.45);
    border-color: rgba(56, 189, 248, 0.7);
  }

  .btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 0 28px rgba(34, 211, 238, 0.8);
  }

  .btn-ghost {
    background: transparent;
    color: #e5e7eb;
    border-color: rgba(148, 163, 184, 0.7);
  }

  .btn-ghost:hover {
    background: rgba(15, 23, 42, 0.9);
    border-color: #22d3ee;
    box-shadow: 0 0 16px rgba(34, 211, 238, 0.35);
  }

  .btn-icon {
    font-size: 1.1rem;
    display: inline-flex;
  }

  /* Form styling */
  .form-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1rem 1.1rem;
  }

  .field {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .field-full {
    grid-column: 1 / -1;
  }

  .field label {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #9ca3af;
  }

  .field input,
  .field select,
  .field textarea {
    border-radius: 12px;
    border: 1px solid rgba(148, 163, 184, 0.5);
    padding: 0.55rem 0.75rem;
    font: inherit;
    background: rgba(15, 23, 42, 0.9);
    color: #f9fafb;
    outline: none;
    transition: border-color 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
  }

  .field textarea {
    resize: vertical;
    min-height: 110px;
  }

  .field input::placeholder,
  .field textarea::placeholder {
    color: #6b7280;
  }

  .field input:focus,
  .field select:focus,
  .field textarea:focus {
    border-color: #22d3ee;
    box-shadow: 0 0 0 1px rgba(34, 211, 238, 0.4);
    background: rgba(15, 23, 42, 0.95);
  }

  .form-actions {
    grid-column: 1 / -1;
    margin-top: 0.5rem;
    display: flex;
    justify-content: flex-end;
  }

  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .contact-shell {
      padding-inline: 0.8rem;
    }

    .contact-card {
      padding: 1.4rem;
    }

    .form-grid {
      grid-template-columns: 1fr;
    }

    .form-actions {
      justify-content: flex-start;
    }
  }
</style>
