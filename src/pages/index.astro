.hero{max-width:1100px;margin:30px auto;padding:20px;display:grid;grid-template-columns:1.1fr 0.9fr;gap:20px}
.grad{background:linear-gradient(90deg,#38bdf8,#818cf8);-webkit-background-clip:text;color:transparent}
.hero-right{position:relative}

/* orb */
#orb{width:300px;height:300px;margin:auto;border-radius:50%;border:1px solid #38bdf8;box-shadow:0 0 80px #38bdf855;background:radial-gradient(circle,#0ea5e955,#020617 70%);transform-style:preserve-3d}

/* 3D stat pills */
