<!-- robotic background -->
<canvas id="robotic"></canvas>

<script>
/* ROBOTIC PARTICLE BACKGROUND */
const c=document.getElementById("robotic");const ctx=c.getContext("2d");
function resize(){c.width=innerWidth;c.height=innerHeight;}resize();
addEventListener("resize",resize);
const dots=Array.from({length:90},()=>({x:Math.random()*c.width,
y:Math.random()*c.height,vx:(Math.random()-.5)*.6,vy:(Math.random()-.5)*.6}));
let mx=0,my=0;addEventListener("mousemove",e=>{mx=e.clientX;my=e.clientY});
function draw(){
ctx.clearRect(0,0,c.width,c.height);
dots.forEach(p=>{p.x+=p.vx;p.y+=p.vy;
if(p.x<0||p.x>c.width)p.vx*=-1;if(p.y<0||p.y>c.height)p.vy*=-1;
ctx.fillStyle="#38bdf8";ctx.beginPath();ctx.arc(p.x,p.y,2,0,Math.PI*2);ctx.fill();});
ctx.strokeStyle="#38bdf844";
dots.forEach(a=>{dots.forEach(b=>{const d=Math.hypot(a.x-b.x,a.y-b.y);
if(d<140){ctx.globalAlpha=1-d/140;ctx.beginPath();ctx.moveTo(a.x,a.y);ctx.lineTo(b.x,b.y);ctx.stroke();}});});
requestAnimationFrame(draw);}draw();

/* FLOATING ORB ROTATION */
const orb=document.getElementById("orb");let ax=0,ay=0;
setInterval(()=>{ax+=0.6;ay+=0.4;orb.style.transform=`rotateX(${ax}deg) rotateY(${ay}deg)`},30);

/* SCROLL REVEAL */
const io=new IntersectionObserver(e=>e.forEach(x=>{if(x.isIntersecting)x.target.classList.add("show")}),{threshold:.2});
document.querySelectorAll(".reveal").forEach(el=>io.observe(el));

/* COUNTERS ANIMATION */
document.querySelectorAll(".num").forEach(el=>{
let s=0,e=parseInt(el.dataset.val);
let t=setInterval(()=>{s++;el.textContent=s;if(s===e)clearInterval(t)},25)
});
</script>

