<style>
  .hero {
    display: grid;
    grid-template-columns: minmax(0, 1.2fr) minmax(0, 1.1fr);
    gap: 2.5rem;
    align-items: center;
    margin-bottom: 3.5rem;
  }

  .eyebrow {
    font-size: 0.8rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #9ca3af;
    margin-bottom: 0.75rem;
  }

  .hero-text h1 {
    font-size: 2.6rem;
    line-height: 1.15;
    margin-bottom: 0.9rem;
  }

  .sub {
    font-size: 1.02rem;
    line-height: 1.7;
    color: #d1d5db;
    max-width: 34rem;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.9rem;
    margin-top: 1.6rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0.8rem 1.65rem;
    border-radius: 999px;
    font-size: 0.95rem;
    font-weight: 600;
    border: 1px solid transparent;
    cursor: pointer;
    text-decoration: none;
    transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.15s,
      border-color 0.15s, color 0.15s;
    white-space: nowrap;
  }

  .btn-primary {
    background: radial-gradient(
      circle at top left,
      #22d3ee,
      #0ea5e9 40%,
      #4f46e5 100%
    );
    color: #020617;
    box-shadow: 0 0 22px rgba(34, 211, 238, 0.6);
    border-color: rgba(56, 189, 248, 0.9);
  }

  .btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 0 30px rgba(34, 211, 238, 0.9);
  }

  .btn-ghost {
    background: transparent;
    color: #e5e7eb;
    border-color: rgba(148, 163, 184, 0.8);
  }

  .btn-ghost:hover {
    background: rgba(15, 23, 42, 0.9);
    border-color: #22d3ee;
    box-shadow: 0 0 18px rgba(34, 211, 238, 0.4);
  }

  .btn-icon {
    font-size: 1.1rem;
  }

  .hero-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-top: 1.5rem;
  }

  .meta-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.9);
    border: 1px solid rgba(148, 163, 184, 0.4);
    font-size: 0.82rem;
    color: #d1d5db;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 999px;
    display: inline-block;
    box-shadow: 0 0 10px currentColor;
  }

  .dot-green {
    color: #22c55e;
    background: currentColor;
  }

  .dot-blue {
    color: #0ea5e9;
    background: currentColor;
  }

  .dot-amber {
    color: #f59e0b;
    background: currentColor;
  }

  /* HERO VISUAL */

  .hero-visual {
    position: relative;
    min-height: 320px;
  }

  .grid-orbit {
    position: absolute;
    inset: 5%;
    border-radius: 24px;
    background-image: linear-gradient(
        rgba(148, 163, 184, 0.15) 1px,
        transparent 1px
      ),
      linear-gradient(
        90deg,
        rgba(148, 163, 184, 0.15) 1px,
        transparent 1px
      );
    background-size: 40px 40px;
    opacity: 0.5;
    mask-image: radial-gradient(circle at center, black 60%, transparent 100%);
    animation: grid-move 18s linear infinite;
  }

  .robotic-core {
    position: relative;
    width: 100%;
    max-width: 360px;
    aspect-ratio: 1 / 1;
    margin: 0 auto;
    margin-top: 0.5rem;
  }

  .ring {
    position: absolute;
    inset: 10%;
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.45);
    box-shadow: 0 0 30px rgba(15, 23, 42, 0.9);
  }

  .ring-outer {
    animation: ring-spin 36s linear infinite;
  }

  .ring-middle {
    inset: 22%;
    border-style: dashed;
    opacity: 0.8;
    animation: ring-spin-reverse 26s linear infinite;
  }

  .ring-inner {
    inset: 36%;
    border-color: rgba(56, 189, 248, 0.9);
    box-shadow: 0 0 25px rgba(56, 189, 248, 0.6);
    animation: pulse-inner 3.8s ease-in-out infinite;
  }

  .robotic-arm {
    position: absolute;
    inset: 26%;
    transform-origin: 50% 80%;
    animation: arm-sweep 6.5s ease-in-out infinite;
  }

  .arm-base {
    position: absolute;
    bottom: 8%;
    left: 45%;
    width: 10%;
    height: 18%;
    border-radius: 999px;
    background: radial-gradient(circle at top, #1f2937, #020617);
    border: 1px solid rgba(148, 163, 184, 0.7);
  }

  .arm-segment {
    position: absolute;
    width: 8%;
    height: 34%;
    left: 46%;
    background: linear-gradient(#22d3ee, #4f46e5);
    border-radius: 999px;
  }

  .arm-seg-1 {
    bottom: 22%;
    transform-origin: 50% 100%;
    transform: rotate(-18deg);
  }

  .arm-seg-2 {
    bottom: 44%;
    transform-origin: 50% 100%;
    transform: rotate(18deg);
  }

  .arm-head {
    position: absolute;
    bottom: 63%;
    left: 44%;
    width: 14%;
    height: 10%;
    border-radius: 12px;
    background: radial-gradient(circle at top, #e5e7eb, #0f172a);
    border: 1px solid rgba(56, 189, 248, 0.9);
    box-shadow: 0 0 18px rgba(56, 189, 248, 0.8);
  }

  .spark {
    position: absolute;
    width: 6px;
    height: 6px;
    border-radius: 999px;
    background: #facc15;
    box-shadow: 0 0 18px rgba(250, 204, 21, 0.9);
    opacity: 0.1;
  }

  .spark-1 {
    top: 14%;
    left: 18%;
    animation: spark-pulse 3s ease-in-out infinite;
  }

  .spark-2 {
    top: 26%;
    right: 15%;
    animation: spark-pulse 4s ease-in-out infinite 0.8s;
  }

  .spark-3 {
    bottom: 12%;
    left: 32%;
    animation: spark-pulse 3.6s ease-in-out infinite 0.4s;
  }

  .holo-card {
    position: absolute;
    padding: 0.7rem 0.85rem;
    border-radius: 14px;
    background: rgba(15, 23, 42, 0.9);
    border: 1px solid rgba(56, 189, 248, 0.7);
    box-shadow: 0 0 18px rgba(56, 189, 248, 0.6);
    font-size: 0.72rem;
    min-width: 130px;
    backdrop-filter: blur(12px);
  }

  .holo-label {
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    color: #9ca3af;
    font-size: 0.7rem;
  }

  .holo-value {
    margin: 0.25rem 0 0.35rem;
    font-size: 1rem;
  }

  .holo-pill {
    display: inline-flex;
    align-items: center;
    padding: 0.18rem 0.5rem;
    border-radius: 999px;
    font-size: 0.65rem;
    background: rgba(15, 23, 42, 0.95);
    border: 1px solid rgba(148, 163, 184, 0.7);
    color: #cbd5f5;
  }

  .pill-green {
    border-color: #22c55e;
    color: #bbf7d0;
  }

  .holo-top {
    top: 8%;
    left: 10%;
    animation: float-soft 7s ease-in-out infinite;
  }

  .holo-right {
    top: 24%;
    right: -4%;
    animation: float-soft 8s ease-in-out infinite 0.8s;
  }

  .holo-bottom {
    bottom: 4%;
    left: 18%;
    animation: float-soft 9s ease-in-out infinite 0.4s;
  }

  /* SECTIONS */

  .section {
    margin-bottom: 3rem;
  }

  .stats {
    display: grid;
    gap: 2rem;
    grid-template-columns: minmax(0, 1.3fr) minmax(0, 1.4fr);
  }

  .stat-card {
    background: rgba(15, 23, 42, 0.9);
    border-radius: 20px;
    padding: 1.8rem;
    border: 1px solid rgba(148, 163, 184, 0.4);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.6);
  }

  .stat-label {
    text-transform: uppercase;
    font-size: 0.78rem;
    letter-spacing: 0.16em;
    color: #9ca3af;
  }

  .stat-card h2 {
    margin-top: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .stat-card p {
    margin: 0;
    color: #d1d5db;
  }

  .stat-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 1rem;
  }

  .stat-mini {
    background: rgba(15, 23, 42, 0.8);
    border-radius: 16px;
    padding: 1.1rem;
    border: 1px solid rgba(51, 65, 85, 0.9);
  }

  .stat-number {
    margin: 0 0 0.25rem;
    font-size: 0.95rem;
    color: #e5e7eb;
    font-weight: 600;
  }

  .stat-text {
    margin: 0;
    font-size: 0.88rem;
    color: #9ca3af;
  }

  .section-cards .section-header,
  .industries .section-header {
    margin-bottom: 1.5rem;
  }

  .section-header h2 {
    margin: 0 0 0.4rem;
  }

  .section-header p {
    margin: 0;
    color: #9ca3af;
    font-size: 0.95rem;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 0.33fr));
    gap: 1.25rem;
  }

  .card {
    background: rgba(15, 23, 42, 0.9);
    border-radius: 18px;
    padding: 1.4rem;
    border: 1px solid rgba(51, 65, 85, 0.9);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.6);
    font-size: 0.95rem;
  }

  .card h3 {
    margin-top: 0;
    margin-bottom: 0.4rem;
  }

  .card p {
    margin-top: 0;
    margin-bottom: 0.6rem;
    color: #d1d5db;
  }

  .card ul {
    margin: 0 0 0.7rem 1.1rem;
    padding: 0;
    color: #9ca3af;
  }

  .card-link {
    font-size: 0.9rem;
    color: #38bdf8;
    text-decoration: none;
  }

  .card-link:hover {
    text-decoration: underline;
  }

  .industries .industry-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .industry-chips span {
    padding: 0.38rem 0.9rem;
    border-radius: 999px;
    font-size: 0.86rem;
    background: rgba(15, 23, 42, 0.9);
    border: 1px solid rgba(148, 163, 184, 0.5);
  }

  /* ANIMATIONS */

  @keyframes grid-move {
    from {
      background-position: 0 0, 0 0;
    }
    to {
      background-position: 40px 40px, 40px 40px;
    }
  }

  @keyframes ring-spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes ring-spin-reverse {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(-360deg);
    }
  }

  @keyframes pulse-inner {
    0%,
    100% {
      box-shadow: 0 0 15px rgba(56, 189, 248, 0.5);
      opacity: 0.85;
    }
    50% {
      box-shadow: 0 0 32px rgba(56, 189, 248, 0.95);
      opacity: 1;
    }
  }

  @keyframes arm-sweep {
    0%,
    100% {
      transform: rotate(-8deg);
    }
    50% {
      transform: rotate(10deg);
    }
  }

  @keyframes spark-pulse {
    0%,
    100% {
      opacity: 0.15;
      transform: translateY(0);
    }
    50% {
      opacity: 1;
      transform: translateY(-4px);
    }
  }

  @keyframes float-soft {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  @media (max-width: 960px) {
    .hero {
      grid-template-columns: 1fr;
    }

    .hero-visual {
      order: -1;
    }

    .hero-text h1 {
      font-size: 2.2rem;
    }

    .stats {
      grid-template-columns: 1fr;
    }

    .stat-grid {
      grid-template-columns: 1fr;
    }

    .cards-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .hero-actions {
      flex-direction: column;
      align-items: stretch;
    }
  }
</style>
