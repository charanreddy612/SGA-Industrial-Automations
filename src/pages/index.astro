/* hover lift */
.card:hover,
.counter:hover,
.client-strip span:hover{
  box-shadow:0 0 18px #38bdf833;
  transform:translateY(-3px)
}

/* micro reveal animation */
.reveal{opacity:0;transform:translateY(30px) scale(.98);transition:.7s}
.show{opacity:1;transform:translateY(0) scale(1)}

.clients{max-width:1000px;margin:20px auto;text-align:center}
.client-strip{display:flex;gap:10px;justify-content:center;flex-wrap:wrap}
.client-strip span{border-radius:12px;padding:8px 14px}

@keyframes borderGlow{0%{filter:hue-rotate(0)}100%{filter:hue-rotate(360deg)}}
@keyframes floatBox{0%,100%{transform:translateY(0)}50%{transform:translateY(-6px)}}

.counters{max-width:1000px;margin:20px auto;display:grid;grid-template-columns:repeat(4,1fr);gap:10px}
