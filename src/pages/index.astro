<script>
/* particles */
const c=document.getElementById("particles");const ctx=c.getContext("2d");
c.width=innerWidth;c.height=innerHeight;
let P=[];for(let i=0;i<120;i++)P.push({x:Math.random()*c.width,y:Math.random()*c.height,dx:(Math.random()-.5),dy:(Math.random()-.5)});
(function draw(){ctx.clearRect(0,0,c.width,c.height);ctx.fillStyle="#38bdf8";
P.forEach(p=>{ctx.fillRect(p.x,p.y,2,2);p.x+=p.dx;p.y+=p.dy;if(p.x<0||p.x>c.width)p.dx*=-1;if(p.y<0||p.y>c.height)p.dy*=-1});requestAnimationFrame(draw)})();

/* orb */
const orb=document.getElementById("orb");let ax=0,ay=0;
setInterval(()=>{ax+=0.6;ay+=0.4;orb.style.transform=`rotateX(${ax}deg) rotateY(${ay}deg)`},30);

/* counters */
document.querySelectorAll(".num").forEach(el=>{let s=0,e=parseInt(el.dataset.val);let t=setInterval(()=>{s++;el.textContent=s;if(s===e)clearInterval(t)},25)});

/* reveal */
const io=new IntersectionObserver(ents=>ents.forEach(e=>{if(e.isIntersecting)e.target.classList.add("show")}),{threshold:.2});
document.querySelectorAll(".reveal").forEach(el=>io.observe(el));
</script>

<style>
body{background:#020617;color:white;margin:0;font-family:system-ui}
#particles{position:fixed;inset:0;z-index:-1}
.nav{position:sticky;top:0;background:#020617dd;border-bottom:1px solid #0f172a;backdrop-filter:blur(10px);z-index:5}
