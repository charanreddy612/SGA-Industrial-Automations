<script>
/* particles */
const c=document.getElementById("particles");const ctx=c.getContext("2d");
c.width=innerWidth;c.height=innerHeight;
let P=[];for(let i=0;i<120;i++)P.push({x:Math.random()*c.width,y:Math.random()*c.height,dx:(Math.random()-.5),dy:(Math.random()-.5)});
(function draw(){ctx.clearRect(0,0,c.width,c.height);ctx.fillStyle="#38bdf8";
P.forEach(p=>{ctx.fillRect(p.x,p.y,2,2);p.x+=p.dx;p.y+=p.dy;if(p.x<0||p.x>c.width)p.dx*=-1;if(p.y<0||p.y>c.height)p.dy*=-1});requestAnimationFrame(draw)})();

/* orb */
const orb=document.getElementById("orb");let ax=0,ay=0;
setInterval(()=>{ax+=0.6;ay+=0.4;orb.style.transform=`rotateX(${ax}deg) rotateY(${ay}deg)`},30);

/* counters */
document.querySelectorAll(".num").forEach(el=>{let s=0,e=parseInt(el.dataset.val);let t=setInterval(()=>{s++;el.textContent=s;if(s===e)clearInterval(t)},25)});

/* reveal */
const io=new IntersectionObserver(ents=>ents.forEach(e=>{if(e.isIntersecting)e.target.classList.add("show")}),{threshold:.2});
document.querySelectorAll(".reveal").forEach(el=>io.observe(el));
</script>

<style>
body{background:#020617;color:white;margin:0;font-family:system-ui}
#particles{position:fixed;inset:0;z-index:-1}
.nav{position:sticky;top:0;background:#020617dd;border-bottom:1px solid #0f172a;backdrop-filter:blur(10px);z-index:5}
.nav-inner{max-width:1100px;margin:auto;padding:10px 16px;display:flex;align-items:center;justify-content:space-between}
.logo{color:#67e8f9;font-weight:700}
nav a{margin:0 6px;text-decoration:none;color:#e5e7eb}
.call-btn{background:#22d3ee;color:#000;padding:8px 14px;border-radius:999px;text-decoration:none}
.hero{max-width:1100px;margin:30px auto;padding:20px;display:grid;grid-template-columns:1.1fr 0.9fr;gap:20px}
.grad{background:linear-gradient(90deg,#38bdf8,#818cf8);-webkit-background-clip:text;color:transparent}
.hero-right{position:relative}
#orb{width:300px;height:300px;margin:auto;border-radius:50%;border:1px solid #38bdf8;box-shadow:0 0 80px #38bdf855;background:radial-gradient(circle,#0ea5e955,#020617 70%);transform-style:preserve-3d}
.stat{position:absolute;background:#020617dd;border:1px solid #38bdf8;padding:6px 10px;border-radius:12px;font-size:.8rem}
.top{top:0;left:0}
.right{right:-20px;top:90px}
.bottom{bottom:0;left:40px}
.green{border-color:#22c55e}
.tag{text-align:center;font-size:1.2rem;margin-top:10px;background:linear-gradient(90deg,#4ade80,#22d3ee);-webkit-background-clip:text;color:transparent}
.counters{max-width:1000px;margin:20px auto;display:grid;grid-template-columns:repeat(4,1fr);gap:10px}
.counter{background:#020617dd;border:1px solid #1e293b;border-radius:16px;padding:10px;text-align:center}
.card-section{max-width:1100px;margin:20px auto}
.cards{display:grid;grid-template-columns:repeat(3,1fr);gap:10px}
.card{background:#020617dd;border:1px solid #1e293b;padding:16px;border-radius:16px}
.chips{text-align:center}
.chips span{border:1px solid #334155;border-radius:999px;padding:4px 10px;margin:3px;display:inline-block}
.testimonials{max-width:1000px;margin:20px auto;text-align:center}
.carousel{display:flex;gap:10px;overflow:hidden}
.tcard{min-width:280px;background:#020617dd;border:1px solid #1e293b;padding:14px;border-radius:16px}
.contact{max-width:600px;margin:40px auto;text-align:center}
form{display:grid;gap:8px}
input,textarea{background:#020617cc;border:1px solid #1e293b;color:white;border-radius:12px;padding:10px}
button{background:#22d3ee;border:0;border-radius:999px;padding:10px;color:#000;font-weight:700}
.wa{position:fixed;right:20px;bottom:20px;background:#22c55e;width:55px;height:55px;border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:22px}
.reveal{opacity:0;transform:translateY(20px);transition:.6s}
.show{opacity:1;transform:translateY(0)}
@media(max-width:900px){
