<script>
/* Particle Background */
const c = document.getElementById("particles");
const ctx = c.getContext("2d");
c.height = window.innerHeight; c.width = window.innerWidth;
let arr = []; for(let i=0;i<120;i++) arr.push({x:Math.random()*c.width,y:Math.random()*c.height,dx:(Math.random()-0.5),dy:(Math.random()-0.5)})
function animate(){ctx.clearRect(0,0,c.width,c.height);ctx.fillStyle="#38bdf8";arr.forEach(p=>{ctx.fillRect(p.x,p.y,2,2);p.x+=p.dx;p.y+=p.dy;if(p.x<0||p.x>c.width)p.dx*=-1;if(p.y<0||p.y>c.height)p.dy*=-1});requestAnimationFrame(animate);} animate();

/* Counter Animation */
const counters=document.querySelectorAll(".num");
counters.forEach(el=>{let start=0,end=parseInt(el.getAttribute("data-val"));let dur=30;let c=setInterval(()=>{start+=1;el.textContent=start;if(start==end)clearInterval(c)},dur);});
</script>

