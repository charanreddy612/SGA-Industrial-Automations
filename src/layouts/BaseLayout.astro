---
const {
  title = "SGA Industrial Automations",
  description = "Industrial Automation, IIoT & Control Panel Solutions",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Particle Animation Script -->
    <script defer src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
  </head>

  <body>
    <!-- Futuristic animated particle layer -->
    <div id="particles-js" class="particles-layer"></div>

    <header class="site-header">
      <div class="top-bar">
        <span>üìû +91 76739 02729</span>
        <span>‚úâÔ∏è info@sgaautomations.com</span>
      </div>

      <nav class="nav">
        <a href="/">Home</a>
        <a href="/solutions">Solutions</a>
        <a href="/industries">Industries</a>
        <a href="/projects">Projects</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <p>¬© {new Date().getFullYear()} SGA Industrial Automations ‚Äî All Rights Reserved.</p>
    </footer>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        if (window.particlesJS) {
          particlesJS("particles-js", {
            particles: {
              number: { value: 60, density: { enable: true, value_area: 800 } },
              color: { value: "#22d3ee" },
              shape: { type: "circle" },
              opacity: { value: 0.4 },
              size: { value: 2 },
              line_linked: {
                enable: true,
                distance: 150,
                color: "#38bdf8",
                opacity: 0.4,
                width: 1,
              },
              move: {
                enable: true,
                speed: 1.8,
                direction: "none",
                random: true,
                straight: false,
                out_mode: "out",
              },
            },
            interactivity: {
              events: {
                onhover: { enable: true, mode: "grab" },
                onclick: { enable: true, mode: "push" },
              },
            },
            retina_detect: true,
          });
        }
      });
    </script>
  </body>
</html>

<style>
  body {
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      sans-serif;
    background: radial-gradient(circle at top left, #0f172a, #020617 70%);
    color: #e5e7eb;
  }

  #particles-js {
    position: fixed;
    width: 100%;
    height: 100%;
    inset: 0;
    z-index: -1;
    pointer-events: none;
  }

  .top-bar {
    background: rgba(15, 23, 42, 0.9);
    color: #ffffff;
    font-size: 0.85rem;
    padding: 6px 10%;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid rgba(148, 163, 184, 0.35);
    backdrop-filter: blur(10px);
  }

  .nav {
    display: flex;
    gap: 1.5rem;
    padding: 1rem 10%;
    background: rgba(15, 23, 42, 0.65);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(148, 163, 184, 0.25);
  }

  .nav a {
    color: #e5e7eb;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.82rem;
    letter-spacing: 0.07em;
    text-decoration: none;
    transition: color 0.15s, text-shadow 0.2s;
  }

  .nav a:hover {
    color: #22d3ee;
    text-shadow: 0px 0px 8px #22d3ee;
  }

  main {
    padding: 2rem 10%;
    min-height: 70vh;
  }

  .site-footer {
    text-align: center;
    padding: 1.5rem 10%;
    background: rgba(15, 23, 42, 0.75);
    border-top: 1px solid rgba(148, 163, 184, 0.25);
    backdrop-filter: blur(10px);
  }
</style>
